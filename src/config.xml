<widget id="br.vr.viewer.models" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VR Viewer 3D Models</name>
    <description>
        Carregue dinamicamente seus modelos 3D e visualize-os com efeito estereosc√≥pico.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon src="www/favicon.png" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    </platform>
    <platform name="ios">
        <preference name="StatusBarOverlaysWebView" value="true" />
    </platform>
    <preference name="fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
    
    <platform name="ios">
        <icon src="resources/icon-29x29.png" width="29" height="29"/>
        <icon src="resources/icon-40x40.png" width="40" height="40"/>
        <icon src="resources/icon-50x50.png" width="50" height="50"/>
