        <icon src="resources/icon-144x144.png" width="144" height="144"/>
        <icon src="resources/icon-152x152.png" width="152" height="152"/>
        <icon src="resources/icon-167x167.png" width="167" height="167"/>
        <icon src="resources/icon-180x180.png" width="180" height="180"/>

